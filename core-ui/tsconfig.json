{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "downlevelIteration": true,
    "target": "es5",
    "importHelpers": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "lib": ["es2018", "dom"],
    "outDir": "dist",
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "files": ["src/sharedlib.module.ts"]
}
